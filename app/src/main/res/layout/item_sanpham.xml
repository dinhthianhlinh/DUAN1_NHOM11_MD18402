<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"

    android:layout_margin="10dp"
    android:background="@drawable/vien"
    >

        <!-- Header -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingTop="10dp"
            android:src="@drawable/iphone__ky2k6x5u6vue_og"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>

        <!-- Tên sản phẩm -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm :"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvTenSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Sản Phẩm"
            android:textColor="#EDEDED"
            android:textSize="20sp"
            android:background="@drawable/vientron2"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- Giá sản phẩm -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá sản phẩm :"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvGiaSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá Sản Phẩm"
            android:textSize="20sp"
            android:background="@drawable/vientron2"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- Mô tả sản phẩm -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả sản phẩm :"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvMoTaSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô Tả Sản Phẩm"
            android:textSize="20sp"
            android:background="@drawable/vientron2"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- Hãng sản phẩm -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hãng sản phẩm :"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvHangSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hãng Sản Phẩm"
            android:textSize="20sp"
            android:background="@drawable/vientron2"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- Ngày mua hàng -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày mua hàng :"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="thoi gian mua"
            android:textSize="20sp"
            android:background="@drawable/vientron2"
            android:layout_marginBottom="40dp"
            android:padding="10dp"/>

</LinearLayout>
